<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:ignore="NamespaceTypo"
    card_view:contentPadding="10dp"
    android:layout_marginBottom="1dp"
   >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:elevation="15dp"
            android:innerRadius="0dp"
            app:cardCornerRadius="1dp"
            card_view:cardBackgroundColor="#00ff00"
            card_view:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/iv_faculty_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/album10"/>
        </android.support.v7.widget.CardView>


        <!--<android.support.v4.widget.CircleImageView-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:id="@+id/image_circle"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@drawable/album10"/>-->
        <!---->
        <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/image_circle"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@mipmap/ic_launcher" />-->


        <TextView
            android:id="@+id/tv_facultyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/card_item_image"
            android:text="title"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@id/detailsAndTime"
            android:gravity="end"
            android:text="time"
            android:textSize="14sp"
            android:textColor="#a9a9a9"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailsAndTime"
            android:layout_toRightOf="@id/card_item_image"
            android:layout_below="@id/tv_facultyTitle">
            <TextView
                android:id="@+id/tv_facultyDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"

                android:text="details"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#A9A9A9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:gravity="end"
                android:text="date"
                android:textColor="#a9a9a9"
                android:layout_gravity="right"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

        </RelativeLayout>



    </RelativeLayout>
</android.support.v7.widget.CardView>