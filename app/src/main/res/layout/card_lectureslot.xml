<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:clickable="true"
    android:longClickable="true"
    android:padding="2dp"
    android:elevation="7dp">

    <TextView
        android:id="@+id/tv_dayHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:text="Mon0"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp">


        <TextView
            android:id="@+id/tv_courseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="courseCode"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="className"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/tv_batchDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="batchDetails"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_classLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="classLocation"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_helpingFaculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="helpingFaculty"
            android:textAlignment="center" />
    </TableLayout>

</android.support.v7.widget.CardView>